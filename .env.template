# -----------------------------------------------------------------------------
# s6s Environment Configuration Template
# -----------------------------------------------------------------------------
# Copy this file to .env and fill in the values.
# DO NOT commit the actual .env file to version control.
# -----------------------------------------------------------------------------

# --- Application ---
# The port the backend service will listen on
PORT=3000

# --- Database (PostgreSQL) ---
# Connection string for Prisma
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/s6s?schema=public"

# --- Security & Auth ---
# Secret key for signing JWT tokens (Auth)
# Generate a strong random string (e.g., `openssl rand -base64 32`)
JWT_SECRET="change_this_to_a_secure_random_string"

# Master Key for Vault Encryption (AES-256-GCM)
# MUST be a 32-byte hex string or base64 string.
# WARNING: Losing this key will render all stored credentials unrecoverable.
MASTER_KEY="change_this_to_a_32_byte_secure_key_xxxxxxxx"

# --- Redis (Queue & Cache) ---
# Configuration for BullMQ and caching
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# --- Frontend (Optional) ---
# If you need to override the API URL for the frontend build
# VITE_API_URL="http://localhost:3000"
